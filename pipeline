  def __init__(self):
    host=''
    port=
    dbname=''
    tb=''
    client=pymongo.MongoClient(host='',port='')
    db=client[dbname]
    self.post=db[tb]
   def process_item(self,item,spider):
    item=dict(item)
    self.post.inset(item)
    return item























  
      
   
